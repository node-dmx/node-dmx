{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "target": "ES6",
    "strict": true,
    "lib": [
      "es2018",
      "esnext"
    ]
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
